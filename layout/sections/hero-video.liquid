<section class="hero">
  <video autoplay muted playsinline class="hero-video">
    <source src="{{ section.settings.hero_video }}" type="video/mp4">
  </video>

  <div class="hero-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="hero-button">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Video",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "url", "id": "button_link", "label": "Button Link" },
    { "type": "text", "id": "button_text", "label": "Button Text" },
    { "type": "text", "id": "hero_video", "label": "MP4 Video URL" }
  ],
  "presets": [{ "name": "Hero Video" }]
}
{% endschema %}
